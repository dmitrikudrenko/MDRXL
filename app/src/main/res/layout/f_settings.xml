<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_network_settings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/button_network_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Success"/>

    <RadioButton
        android:id="@+id/button_network_timeout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timeout"/>

    <RadioButton
        android:id="@+id/button_network_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Error"/>
</RadioGroup>
<resources>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextColor">@color/actionBarColorPrimary</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:maxWidth">4000dp</item>
        <item name="queryHint">Search</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/actionBarColorPrimary</item>
        <item name="android:textColorHint">@color/actionBarColorSecondary</item>
    </style>

    <style name="WomanEditText">
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="VideoActionSelector">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="VideoActionSelectorText">
        <item name="android:textColor">@color/videoActionsTint</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.04</item>
    </style>
</resources>

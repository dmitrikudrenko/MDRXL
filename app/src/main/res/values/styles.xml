<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/listDivider</item>

        <item name="homeAsUpIndicator">@drawable/ic_back</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
        <item name="android:listDivider">@color/listDivider</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextColor">@color/actionBarColorPrimary</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:maxWidth">4000dp</item>
        <item name="queryHint">Search</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/actionBarColorPrimary</item>
        <item name="android:textColorHint">@color/actionBarColorSecondary</item>
    </style>

    <style name="PhotosTheme" parent="Theme.AppCompat.NoActionBar"/>

    <style name="WomanEditText">
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textSize">18sp</item>
    </style>

    <declare-styleable name="RoundedColorView">
        <attr name="backgroundColor" format="color" />
    </declare-styleable>
</resources>
